:8000 {
    gzip
    rewrite {
        if {file} not favicon.ico
        to {path} {path}/ /index.html
    }
}

:8000/discord {
    redir https://discordapp.com/invite/eNkDNRh
}

:8000/handbook {
    gzip
    root ./handbook/docs
    browse
    markdown /
    redir 301 {
        if {uri} not_ends_with /
        if {uri} not_ends_with .md
        if {uri} not_ends_with .png
        / {uri}/
    }
}
