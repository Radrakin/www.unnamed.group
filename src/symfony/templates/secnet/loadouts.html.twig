{% extends 'secnet/base.html.twig' %}

{% block style %}
<style media="screen">
  #bodyWrapper {
    margin-top: 10px;
  }
</style>
{% endblock %}

{% block body %}

<div class="row">
  <div class="col s12">
    <ul class="tabs">
      <li class="tab col s3"><a class="active" href="#publictab">Public</a></li>
      <li class="tab col s3 disabled"><a href="#personaltab">Personal</a></li>
    </ul>
  </div>
  <div id="publictab" class="col s12">
    <div class="card-panel white black-text">
      <h4>Public Loadouts</h4>
      <hr>
      <table>
        <tr>
          <th>CODE</th>
          <th>NAME</th>
          <th style="max-width: 50vw;">DESCRIPTION</th>
          <th>LINK</th>
        </tr>
        {% for x in loadouts.public %}
          <tr>
            <td>{{x.code}}</td>
            <td>{{x.name}}</td>
            <td style="max-width: 50vw;">{% filter markdown %}{{x.description}}{% endfilter %}</td>
            <td><a href="/api/loadout/{{x.code}}" target="_blank">Open in API</a></td>
          </tr>
        {% endfor %}
      </table>
    </div>
  </div>
  <div id="personaltab" class="col s12"></div>
</div>

{% endblock %}
